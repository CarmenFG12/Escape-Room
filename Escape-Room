import matplotlib.pyplot as plt
from skimage import io

imagen1=plt.imread("correcta1.png")
imagen2=plt.imread("incorrecta1.png")
imagen3=plt.imread("correcta2.png")
imagen4=plt.imread("incorrecta2.png")
imagen5=plt.imread("correcta3.png")
