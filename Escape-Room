resp=input()


if grupo==1:
    if prueba==1:
        if resp=="3,7,1" or resp=="3,1,7" or resp=="1,3,7" or resp=="1,7,3" or resp=="7,1,3" or resp=="7,3,1":
            plt.xticks([]), plt.yticks([])
